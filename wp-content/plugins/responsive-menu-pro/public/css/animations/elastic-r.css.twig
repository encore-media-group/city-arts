    transition-delay: 0s;
    opacity: 0;
}

.responsive-menu-pro-elastic-r.is-active .responsive-menu-pro-inner::after {
    transform: translate3d(0, {{ (options.button_line_margin + options.button_line_height) * -2 }}{{ options.button_line_margin_unit }}, 0) rotate(270deg);
    transition-delay: 0.1s;
}